<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender
		name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%5level %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>
	
	<logger
		name="com.mkyong.helloworld"
		level="info"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<logger
		name="jdbc.sqlonly"
		additivity="false">
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger
		name="jdbc.resultsettable"
		additivity="false">
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
	</logger>

	<root level="off">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>